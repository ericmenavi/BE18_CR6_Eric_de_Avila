{% extends 'base.html.twig' %}

{% block title %}Events index
{% endblock %}

{% block body %}
	<h1>Events home</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Date</th>
				<th>Description</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for event in events %}
				<tr>
					<td>{{ event.id }}</td>
					<td>{{ event.name }}</td>
					<td>{{ event.date }}</td>
					<td>{{ event.description }}</td>
					<td>
						<a href="{{ path('app_events_show', {'id': event.id}) }}">show</a>
						<a href="{{ path('app_events_edit', {'id': event.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_events_new') }}">Create new</a>
{% endblock %}
