{% extends 'base.html.twig' %}

{% block title %}Events
{% endblock %}

{% block body %}
	<div class="container">
		<div class="card">
			<h5 class="card-header">Events</h5>
			<div class="card-body">
				<div class="row">
					<div class="col-md-4">
						<img src="{{ event.image }}" class="img-fluid rounded" alt="{{ event.name }}">
					</div>
					<div class="col-md-8">
						<table class="table">
							<tbody>
								<tr>
									<th>Id</th>
									<td>{{ event.id }}</td>
								</tr>
								<tr>
									<th>Name</th>
									<td>{{ event.name }}</td>
								</tr>
								<tr>
									<th>Date</th>
									<td>{{ event.date }}</td>
								</tr>
								<tr>
									<th>Description</th>
									<td>{{ event.description }}</td>
								</tr>
							</tbody>
						</table>
					</div>
				</div>
				<div class="d-flex justify-content-between mt-3">
					<a href="{{ path('app_events_index') }}" class="btn btn-primary">back to list</a>
					<a href="{{ path('app_events_edit', {'id': event.id}) }}" class="btn btn-secondary">edit</a>
				</div>
			</div>
		</div>
	</div>


	{{ include('events/_delete_form.html.twig') }}
{% endblock %}
