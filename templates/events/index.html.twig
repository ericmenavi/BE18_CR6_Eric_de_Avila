{% extends 'base.html.twig' %}

{% block title %}Events index
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="text-center">Events Index</h1>
		<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
			{% for event in events %}
				<div class="col mb-4">
					<div class="card h-100">
						<img src="{{ event.image }}" class="card-img-top" alt="{{ event.name }}">
						<div class="card-body">
							<h5 class="card-title">{{ event.name }}</h5>
							<p class="card-text">{{ event.description }}</p>
						</div>
						<ul class="list-group list-group-flush">
							<li class="list-group-item">
								<strong>Date:</strong>
								{{ event.date|date('m/d/Y') }}</li>
							<li class="list-group-item">
								<strong>Capacity:</strong>
								{{ event.capacity }}</li>
							<li class="list-group-item">
								<strong>Email:</strong>
								{{ event.email }}</li>
							<li class="list-group-item">
								<strong>Phone:</strong>
								{{ event.phone }}</li>
							<li class="list-group-item">
								<strong>Address:</strong>
								{{ event.address }}</li>
							<li class="list-group-item">
								<strong>Country:</strong>
								{{ event.country }}</li>
							<li class="list-group-item">
								<strong>City:</strong>
								{{ event.city }}</li>
							<li class="list-group-item">
								<strong>ZIP:</strong>
								{{ event.zip }}</li>
							<li class="list-group-item">
								<strong>URL:</strong>
								<a href="{{ event.url }}">{{ event.url }}</a>
							</li>
							<li class="list-group-item">
								<strong>Type:</strong>
								{{ event.type }}</li>
						</ul>
						<div class="card-footer">
							<a href="{{ path('app_events_show', {'id': event.id}) }}" class="btn btn-primary">Show</a>
							<a href="{{ path('app_events_edit', {'id': event.id}) }}" class="btn btn-secondary">Edit</a>
						</div>
					</div>
				</div>
			{% else %}
				<div class="col-12">
					<div class="alert alert-warning" role="alert">
						No events found.
					</div>
				</div>
			{% endfor %}
		</div>
	</div>


	<a href="{{ path('app_events_new') }}">Create new</a>
{% endblock %}
